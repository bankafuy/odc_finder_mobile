<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/cardMargin"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/cardMargin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/labelNama"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Nama"
                    />
                <TextView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/txtOdcName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="name"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/labelKapasitas"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas: "
                    />
                <TextView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/txtOdcKapasitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kapasitas"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/labelDatel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Datel: "
                    />
                <TextView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/txtOdcDatel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="datel"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/labelWitel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Witel: "
                    />
                <TextView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/txtOdcWitel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="witel"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/labelLatitude"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Latitude: "
                    />
                <TextView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/txtOdcLatitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lat"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/labelLongitude"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Longitude: "
                    />
                <TextView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/txtOdcLongitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="long"
                    />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--<View android:id="@+id/divider"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#bbbbbb"/>-->

</LinearLayout>